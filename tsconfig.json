{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
      ],
      "@utils/*": ["./src/utils/*"]
    },
    "typeRoots": ["node_modules/@types", "./src/typings"],
    "types": [
      "node",
      "express",
      "mongoose",
      "md5"
    ]
  },
  "include": [
    "src/**/*",
  ],
}
